{
  "$schema": "http://json-schema.org/draft/2020-12/schema#",
  "type": "object",
  "properties": {
    "bashrc": {
      "type": "object",
      "oneOf": [
        {
          "type": "object",
          "properties": {
            "enabled": {
              "type": "boolean",
              "const": true
            },
            "path": {
              "type": "string"
            }
          }
        },
        {
          "type": "object",
          "properties": {
            "enabled": {
              "type": "boolean",
              "const": false
            },
            "path": {
              "type": "string"
            }
          }
        }
      ]
    },
    "path": {
      "type": "string"
    },
    "version": {
      "type": "string"
    },
    "prepare": {
      "type": "string"
    },
    "scripts": {
      "type": "object",
      "properties": {
        "develop-course": {
          "type": "string"
        },
        "run-course": {
          "type": "string"
        },
        "test": {
          "type": "object",
          "properties": {
            "functionName": {
              "type": "string"
            },
            "arguments": {
              "type": "array"
            }
          }
        }
      }
    },
    "workspace": {
      "type": "object",
      "properties": {
        "files": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "path": {
                "type": "string"
              }
            }
          }
        },
        "previews": {
          "type": "array",
          "items": {
            "type": "object",
            "oneOf": [
              {
                "type": "object",
                "properties": {
                  "open": {
                    "type": "boolean",
                    "const": true
                  },
                  "showLoader": {
                    "type": "boolean"
                  },
                  "url": {
                    "type": "string"
                  },
                  "timeout": {
                    "type": "number"
                  }
                }
              },
              {
                "type": "object",
                "properties": {
                  "open": {
                    "type": "boolean",
                    "const": false
                  },
                  "showLoader": {
                    "type": "boolean"
                  },
                  "url": {
                    "type": "string"
                  },
                  "timeout": {
                    "type": "number"
                  }
                }
              }
            ]
          }
        },
        "terminals": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "directory": {
                "type": "string"
              },
              "message": {
                "type": "string"
              },
              "name": {
                "type": "string"
              },
              "show": {
                "type": "boolean"
              }
            }
          }
        }
      }
    },
    "bash": {
      "type": "object",
      "properties": {
        ".bashrc": {
          "type": "string"
        },
        "sourcerer.sh": {
          "type": "string"
        }
      }
    },
    "client": {
      "type": "object",
      "properties": {
        "assets": {
          "type": "object",
          "properties": {
            "header": {
              "type": "string"
            },
            "favicon": {
              "type": "string"
            }
          }
        },
        "landing": {
          "type": "object",
          "properties": {
            "description": {
              "type": "string"
            },
            "faq-link": {
              "type": "string"
            },
            "faq-text": {
              "type": "string"
            }
          }
        }
      }
    },
    "config": {
      "type": "object",
      "properties": {
        "projects.json": {
          "type": "string"
        },
        "state.json": {
          "type": "string"
        }
      }
    },
    "curriculum": {
      "type": "object",
      "properties": {
        "locales": {
          "type": "object",
          "patternProperties": {
            ".*": {
              "type": "string"
            }
          }
        }
      }
    },
    "hotReload": {
      "type": "object",
      "properties": {
        "ignore": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "tooling": {
      "type": "object",
      "properties": {
        "helpers": {
          "type": "string"
        }
      }
    }
  }
}
